{
  "compilerOptions": {
    "target": "esnext",
		"module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
		"declaration": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"]
  },
  "include": [
		"./src/**/*.ts"
	],
  "exclude": [
		"./build/*",
		"./node_modules/*",
	],
}